<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="categorySortListCategory"
            type="com.moufee.a14cup.categorySorts.CategorySortingListCategory"/>

        <variable
            name="listener1"
            type="com.moufee.a14cup.ui.categorySorting.CategorySortFragment.OnListFragmentInteractionListener"/>

    </data>

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        android:onClick="@{() -> listener1.onSortCategoryFragmentInteraction(categorySortListCategory)}"
        >

        <TextView
            android:id="@+id/sort_category_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@{categorySortListCategory.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textSize="18sp"
            tools:text="Category Name"/>
    </LinearLayout>
</layout>
